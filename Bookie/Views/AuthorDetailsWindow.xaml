<Window x:Class="Bookie.Views.AuthorDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Topmost="True"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Closing="Window_Closing" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="BookDetailsWindow" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Author.FullName}" />
        <ListBox ItemsSource="{Binding Author.Books}" />
    </StackPanel>
</Window>